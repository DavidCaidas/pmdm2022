<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_size"

    >


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imagenTitulo"

        android:layout_width="match_parent"
        android:layout_height="@dimen/image_size"
        android:layout_marginStart="@dimen/margin_size"
        android:layout_marginTop="@dimen/margin_size"
        android:layout_marginEnd="@dimen/margin_size"
        android:layout_marginBottom="@dimen/margin_size"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_kebab"
        app:tint="@color/teal_700" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagenTitulo"
        android:text="chubasquero santa teresa"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"
        android:layout_margin="@dimen/margin_size"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="restaurante el comienzo"
        android:textSize="16sp"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="total : 2 puntos"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media : 4"


            />


    </RelativeLayout>


</RelativeLayout>