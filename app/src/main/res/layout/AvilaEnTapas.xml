<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">


    <ImageView
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/foto1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/ic_kebab"
        />



        <TextView
            android:layout_margin="10dp"
            android:id="@+id/titulo"
            app:layout_constraintTop_toBottomOf="@+id/foto1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/tittle" />

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/descripcion"
            app:layout_constraintTop_toBottomOf="@id/titulo"
            app:layout_constraintStart_toStartOf="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/description" />


            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/estrellas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descripcion"
                android:layout_width="155dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_stars"
                app:tint="@color/stars"
                />


            <ImageView
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="@id/descripcion"
                app:layout_constraintTop_toTopOf="@+id/estrellas"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_hearth"
                app:tint="@color/stars" />



</androidx.constraintlayout.widget.ConstraintLayout>
