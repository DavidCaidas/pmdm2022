<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pestaña"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_size"

    >

    <RelativeLayout
        android:id="@+id/general"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/fondo"

        >


        <RelativeLayout
            android:id="@+id/imagen"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/ic_zoo"
            android:gravity="fill_vertical"

            >

            <TextView
                android:id="@+id/disponibles3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@color/yellow"
                android:text="3 disponibles"

                />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icono"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/disponibles3"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/ic_hearth"
                app:tint="@color/teal_700"

                />


            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/disponibles3"
                android:layout_toEndOf="@+id/icono"
                android:layout_toRightOf="@+id/icono"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:text="Cheema fruteria- general Ricardos -urianasodinasodniaoisndoiasndoiansaosidnoaisndoaosidnaosidnoaisndoiansdoinaosidnon"
                android:textColor="@color/white"
                android:textSize="25dp"

                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagen"

            >


            <TextView
                android:id="@+id/pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:text="Pack sorpesa"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/recogida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pack"
                android:paddingVertical="10dp"
                android:text="recogida hoy : 00:14-23:59"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recogida"

                >


                <TextView
                    android:id="@+id/puntuacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="50dp"
                    android:text="2,7"

                    />

                <TextView
                    android:id="@+id/distancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/puntuacion"
                    android:paddingHorizontal="50dp"
                    android:text="4,1 km"

                    />

                <TextView
                    android:id="@+id/precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/distancia"
                    android:paddingHorizontal="50dp"
                    android:text="2,99€"

                    />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>